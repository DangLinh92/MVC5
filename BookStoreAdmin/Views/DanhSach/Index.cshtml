@model IEnumerable<BookStoreAdmin.Models.Sache>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <style type="text/css">
        .row {
            padding-bottom: 10px;
        }
    </style>
@using (Html.BeginForm("Index", "DanhSach", FormMethod.Post))
{
    <h2>Quản lý thông tin sách</h2>
    <fieldset>
        <legend>Nhập thông tin tìm kiếm</legend>
        <div class="row">
            <div class="col-md-2">
                Từ khóa
            </div>
            <div class="col-md-3">
                @Html.TextBox("tukhoa", "", new {@class = "form-control"})
            </div>
            <div class="col-md-1">
                Chủ Đề
            </div>
            <div class="col-md-4">
                @Html.DropDownList("chudeid", (SelectList) ViewBag.ChuDe, "----Chủ Đề---", new {@class = "form-control"})
            </div>
            <div class="col-md-2">
                <input type="submit" value="tìm kiếm" class="btn btn-primary"/>
            </div>
        </div>
    </fieldset>

    <p>
        @Html.ActionLink("Create New", "Create", new {@class = "btn btn-primary"})
    </p>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnhDaiDien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TacGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayTao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayXuatBan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChuDeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaBan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoiDung)
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="img-rounded" src="~/Content/images/@item.AnhDaiDien" width="80" height="80"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TacGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayTao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayXuatBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChuDeId)
                </td>
                <td>
                    @{
                        double giaban = 0;
                        if (item.GiaBan.HasValue)
                        {
                            giaban = item.GiaBan.Value;
                        }
                    }
                    @giaban.ToString("###,###.0")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoiDung)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
}